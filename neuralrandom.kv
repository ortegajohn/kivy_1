<MyRoot>:

    random_label: random_label

    BoxLayout:
        orientation: 'vertical'
        Splitter:
            sizable_from: 'bottom'
            Label:
                text: "NeuralRandom"
                font_size: 32
                color: 0.92, 0.45, 0, 1
        Label:
            id: dropdown
            text: "Click Dropdown"
            font_size: 32
        Spinner:
            id: spinner_id
            text: "Pick Number"
            values: ['1', '2', '3', '4', '5']

            on_text: root.spinner_clicked(spinner_id.text)
        Label:
            id: random_label
            text: "-"
            font_size: 64
        Button:
            text: "Generate"
            font_size: 32
            size: 100, 50
            on_press: root.generate_number()